@page
@model IndexModel

<div class="album py-5">
    <div class="container">
        <div class="progress">
            <div class="progress-bar" style="width: @Model.PercentComplete%">
                <span class="text-dark">@String.Format("{0:F2}", Model.PercentComplete)%</span>
            </div>
        </div>
        <div class="row">
            @foreach (var task in Model.Tasks)
            {
                <div class="col-md-4">
                    <h2>@task.Name</h2>
                    <p class="panel-text">
                        @task.Description
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <small>
                            @if (task.Complete) 
                            {
                                <span class="text-warning">complete</span>
                            } 
                            else
                            {
                                <span class="text-muted">incomplete</span>
                            }
                        </small>
                        <a class="btn btn-default" href="@task.Address">Go!</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>